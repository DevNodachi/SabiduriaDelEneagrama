  <script>
    $("#cuantos_hermanos").hide();
    $("#hermanos_label").hide();
    $("#tiene_hermanos").on("change", function() {
      if ($(this).val() == '0') {
        $("#cuantos_hermanos").hide();
        $("#hermanos_label").hide();
      }
      if ($(this).val() == '1') {
        $("#cuantos_hermanos").show();
        $("#hermanos_label").show();
      }
    })
  </script>
