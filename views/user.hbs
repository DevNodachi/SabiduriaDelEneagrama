<section class="insert full-section">
  <h3>Modo usuario</h3>
  <form action="/insert" method="post">
    <div class="form-row">
      <div class="col-3 form-group">
        <label for="cedula">Cedula</label>
        <input type="text" class="form-control" id="cedula" name="cedula" required>
      </div>
    </div>
    <div class="form-row">
      <div class="col-5 form-group">
        <label for="genero">Genero</label>
        <select class="form-control" id="genero" name="genero">
          <option value="male">Masculino</option>
          <option value="female">Femenino</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="col-4 form-group">
        <label for="nacimiento">Fecha de Nacimiento</label>
        <input type="date" class="form-control" id="nacimiento" name="nacimiento" required>
      </div>
      <div class="col-2 form-group">
        <label for="edad">Edad</label>
        <input type="text" class="form-control" id="edad" name="edad" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col">
        <label for="pais">Pais</label>
        <input type="text" class="form-control" id="pais" name="pais" required>
      </div>
      <div class="form-group col">
        <label for="estado">Estado</label>
        <input type="text" class="form-control" id="estado" name="estado" required>
      </div>
      <div class="form-group col">
        <label for="ciudad">Ciudad</label>
        <input type="text" class="form-control" id="ciudad" name="ciudad" required>
      </div>
    </div>
    <div class="form-row">
      <div class="col-8 form-group">
        <label for="profesion">Profesion</label>
        <input type="text" class="form-control" id="profesion" name="profesion" required>
      </div>
    </div>
    <div class="form-row">
      <div class="col-5 form-group">
        <label for="estado_civil">Estado civil</label>
        <select class="form-control" id="estado_civil" name="estado_civil">
          <option value="0">Soltero</option>
          <option value="1">Casado</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="col-5 form-group">
        <label for="trabaja">Actualmente trabaja?</label>
        <select class="form-control" id="trabaja" name="trabaja">
          <option value="0">No</option>
          <option value="1">Si</option>
        </select>
      </div>
      <div class="col-5 form-group">
        <label for="vivir_padres">Vives con tus padres?</label>
        <select class="form-control" id="vivir_padres" name="vivir_padres">
          <option value="0">No</option>
          <option value="1">Si</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="col-5 form-group">
        <label for="tiene_hermanos">Tienes hermanos?</label>
        <select class="form-control" id="tiene_hermanos" name="tiene_hermanos">
          <option value="0">No</option>
          <option value="1">Si</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="col-3 form-group">
        <label id="hermanos_label" for="cuantos_hermanos">Cuantos?</label>
        <input type="text" class="form-control" id="cuantos_hermanos" name="cuantos_hermanos">
      </div>
    </div>
    </div>
    <button type="submit" class="btn btn-primary">Siguiente</button>
  </form>
</section>
